*{margin:0;padding:0;outline:0;list-style-type:none}a:link,a:active,a:visited{color:#00f;text-decoration:none}a:hover{text-decoration:underline}body{background-color:#141414;color:#2c2c2c;font:12px Verdana;text-align:center}#exception{background-color:#fafafa;border:3px solid #ccc;margin:5% 5% 0 5%;padding:15px;text-align:left}#footer{color:#FFF}p{line-height:35px}p.trace{margin-right:2%}.details{display:none;margin:0 0 0 2%}p.label{display:inline-block;font-weight:bold;padding-right:10px;text-align:right;width:80px}.details a.args{color:#2c2c2c}.details a.args:hover{color:#2c2c2c}.details pre{border:1px solid #000;display:none;font-size:10px;margin:1% 0 2% 0;padding:10px;overflow:auto}

